<% provide(:title, "Home") %>

<% unless user_signed_in? %>
  <div class="row">
    <div class="col text-center home">
      <h1>Boing</h1>
      <p>Keep track of your options trades and equity valuations</p>
      <%= link_to "Sign up!", signup_path, class: "btn btn-primary" %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col text-center">
      <% if !@bull_put_spreads.empty? || !@short_puts.empty? || !@bear_call_spreads.empty? %>
        <h1 class="bps">Active Trades</h1>
      <% end %>
      <% unless @bull_put_spreads.empty? %>
        <h2 class="bps">Bull Put Spreads (<%= @bull_put_spreads.count %>)</h2>
        <%= render 'shared/bps' %>
      <% end %>
      <% unless @bear_call_spreads.empty? %>
        <h2 class="bps">Bear Call Spreads (<%= @bear_call_spreads.count %>)</h2>
        <%= render 'shared/bcs' %>
      <% end %>
      <% unless @short_puts.empty? %>
        <h2 class="bps">Short Puts (<%= @short_puts.count %>)</h2>
        <%= render 'shared/shortput' %>
      <% end %>
      <% unless @short_calls.empty? %>
        <h2 class="bps">Short Calls (<%= @short_calls.count %>)</h2>
        <%= render 'shared/shortcall' %>
      <% end %>
      <% if @bull_put_spreads.empty? && @short_puts.empty? && @bear_call_spreads.empty?%>
        <h1>Welcome to Boing</h1>
        <p>You have no trades! Create a new trade from the dropdown menu.</p>
      <% end %>
    </div>
  </div>
<% end %>

