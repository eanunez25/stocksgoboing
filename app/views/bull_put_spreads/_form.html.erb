<%= form_with(model: bull_put_spread, local: true) do |form| %>
  <% if bull_put_spread.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bull_put_spread.errors.count, "error") %> prohibited this bull_put_spread from being saved:</h2>

      <ul>
        <% bull_put_spread.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="wrapper fadeInDown">
    <div id="formContent">

      <div class="fadeIn first">
        <h1 class="login">Bull Put Spread</h1>
      </div>

      <div class="field">
        <%= form.text_field :asset, class: "fadeIn second", id: "login", type: "text", placeholder: "Ticker"  %>
      </div>

      <div class="field">
        <%= form.text_field :floor1, class: "fadeIn third", id: "login", type: "text", placeholder: "Floor 1" %>
      </div>

      <div class="field">
        <%= form.text_field :floor2, class: "fadeIn fourth", id: "login", type: "text", placeholder: "Floor 2" %>
      </div>

      <div class="field">
        <%= form.text_field :strike, class: "fadeIn fifth", id: "login", type: "text", placeholder: "Strike" %>
      </div>

      <div class="field fadeIn sixth" type="text">
        <p class="expiration">Expiration:</p>
        <%= form.date_select :expiration, order: [:month, :day, :year], start_year: Date.today.year  %>
      </div>

      <div class="field">
        <%= form.text_area :open_comments, class: "fadeIn seventh", id: "login", type: "text", placeholder: "Opening Comments" %>
      </div>

      <div class="field">
        <%= form.text_area :close_comments, class: "fadeIn eighth", id: "login", type: "text", placeholder: "Closing Comments" %>
      </div>

      <div class="actions">
        <%= form.submit "Save", type: "submit", class: "fadeIn ninth btn btn-primary" %>
      </div>

    </div>
  </div>

<% end %>
